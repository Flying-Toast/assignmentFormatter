{
	"manifest_version": 2,
	"name": "Assignment Formatter",
	"version": "1.0.1",
	"description": "Formats programming homework assignments",
	"homepage_url": "https://github.com/Flying-Toast/assignmentFormatter",

	"icons": {
		"48": "icons/icon48.png",
		"96": "icons/icon96.png"
	},

	"permissions": [
		"*://*.paiza.io/*",
		"tabs"
	],

	"content_scripts": [{
		"matches": ["*://*.paiza.io/*"],
		"js": ["contentScripts/libs.js", "contentScripts/vfs_fonts.js", "contentScripts/formatCode.js"]
	}],

	"browser_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png"
		},
		"default_popup": "popup/popup.html"
	}
}